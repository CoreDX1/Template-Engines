doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
        title Document
    body 
        div.container
            h1 Productos
            form(action='/creatPr', method='post')
                div.mb-3
                    label(for="exampleInputEmail1").form-label Name
                    input(type="text", aria-labelledby="exampleInputEmail", name="name").form-control#exampleInputEmail1
                div.mb-3
                    label(for="exampleInputPassword1").form-label Price
                    input(type="text", name='price').form-control#exampleInputPassword1
                div.mb-3
                    label(for="exampleInputPassword1").form-label Image
                    input(type="text", name="image").form-control#exampleInputPassword1
                button(type="submit").btn.btn-primary Save
            br
            a(href="/productos") Ver los productos